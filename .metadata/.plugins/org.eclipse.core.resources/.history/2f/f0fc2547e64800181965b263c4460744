	public static void main (String[] args) {
		while (true) {
			note();
		}
	}
	public static String note(int exam, int cc) {
		// les notes sont vérifiées et validées avant l'appel de la fonction
		int sum = exam + cc;
		
		if (sum < 30) {
			return "D";
		} else if (sum >=30 && sum < 50){
			return "C";
		} else if (sum >=50 && sum < 70) {
			return "B";
		} else {
			return "A";
		}
	
	}
	
	public static void note() {
		// Demande à l'user d'entrer les notes pendant l'exécution de la méthode
		Scanner s;
		String examIn, ccIn;
		boolean valide = true;
		
		int exam, cc;
		
		try {
			System.out.println("Entrer la note d'examen");
			s = new Scanner(System.in);
			examIn = s.nextLine();
			exam = Integer.parseInt(examIn);
			System.out.println("Entrer la note de Contrôle Continu");
			s = new Scanner(System.in);
			ccIn = s.nextLine();
			cc = Integer.parseInt(ccIn);
			if (exam > 75 || exam < 0){
				valide = false;
				// throw new NumberFormatException("La note d'examen doit être comprise entre 0 et 75");
			}
			if (cc > 25 || cc < 0) {
				valide = false;
				// throw new NumberFormatException("La note de contrôle continu doit être comprise entre 0 et 25");
			}
			if (valide) {
				int sum = exam + cc;
				
				if (sum < 30) {
					System.out.println("D");
				} else if (sum >=30 && sum < 50){
					System.out.println("C");
				} else if (sum >=50 && sum < 70) {
					System.out.println("B");
				} else {
					System.out.println("A");
				}
			}
			else {
				throw new NumberFormatException("L'une des notes n'est pas valide");
			}
			
			
		}
		catch (NumberFormatException nfe) {
			 System.out.println("Erreur dans l'entrée : " + nfe.getMessage());
		}
	}
	
	
	/* Reçoit 2 entiers A et B
	 * Sort une lettre
	 * 0 <= a <= 75
	 * 0 <= b <= 25
	 * Début
	 * Vérifier A
	 * Vérifier B
	 * Calculer A+B
	 * 
	 * 
	 * 
	 * Fin
	 */
	
	
	/* Début
	 * 		Lire noteContinue
	 * 		Lire noteExamen
	 * 		Calculer Somme de noteExamen et noteContinue
	 * 		
	 * 		si somme < 30
	 * 			alors afficher D
	 * 		sinon si somme < 50
	 * 			alors afficher C
	 * 		sinon si somme < 70
	 * 			alors afficher B
	 * 		sinon 
	 * 			afficher A
	 * 		fin si
	 * Fin
	 */
	
	
	

}
